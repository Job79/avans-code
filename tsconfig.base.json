{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avans-code/backend/assignments": [
        "libs/backend/assignments/src/index.ts"
      ],
      "@avans-code/backend/auth": ["libs/backend/auth/src/index.ts"],
      "@avans-code/backend/recommendations": [
        "libs/backend/recommendations/src/index.ts"
      ],
      "@avans-code/backend/schemas": ["libs/backend/schemas/src/index.ts"],
      "@avans-code/backend/tags": ["libs/backend/tags/src/index.ts"],
      "@avans-code/backend/users": ["libs/backend/users/src/index.ts"],
      "@avans-code/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@avans-code/ui/assignments": ["libs/ui/assignments/src/index.ts"],
      "@avans-code/ui/auth": ["libs/ui/auth/src/index.ts"],
      "@avans-code/ui/env": ["libs/ui/env/src/index.ts"],
      "@avans-code/ui/layout": ["libs/ui/layout/src/index.ts"],
      "@avans-code/ui/tags": ["libs/ui/tags/src/index.ts"],
      "@avans-code/ui/users": ["libs/ui/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
